@{
    ViewData["Title"] = "404";
    var themeMode = Context.Request.Cookies["ThemeMode"] ?? "light";
    var isDark = (themeMode == "dark") ? true : false;
}


<section id="error-page" class="error-page">
    <div class="container">
        <div class="image">
            <img src="/images/@(isDark ? "404-dark.svg" : "404.svg" )" alt="404 error" />
        </div>
        <div class="text">
            <h1>Ooops!</h1>
            <p>The page you are looking for is not available.</p>
        </div>
        <a class="btn-theme" asp-controller="Home" asp-action="Index"><img src="/images/icons/house-icon.svg" alt="Home icon" />Go to homepage</a>
    </div>
</section>