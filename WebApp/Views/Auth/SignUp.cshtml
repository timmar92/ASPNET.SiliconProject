@model SignUpViewModel

@{
    ViewData["Title"] = "Sign Up";
}

<section id="signup">
    <div class="container">
        <form method="post" asp-controller="Auth" asp-action="SignUp" novalidate>
            <h1>Create Account</h1>
            <p>Already have an account? <a asp-controller="Auth" asp-action="SignIn">Sign in here</a>.</p>

            <div class="content">
                <div id="form-firstname" class="input-group">
                    <label asp-for="@Model.FirstName"></label>
                    <span asp-validation-for="@Model.FirstName"></span>
                    <input asp-for="@Model.FirstName" />
                </div>
                <div id="form-lastname" class="input-group">
                    <label asp-for="@Model.LastName"></label>
                    <span asp-validation-for="@Model.LastName"></span>
                    <input asp-for="@Model.LastName" />
                </div>
                <div id="form-email" class="input-group">
                    <label asp-for="@Model.Email"></label>
                    <span asp-validation-for="@Model.Email"></span>
                    <input asp-for="@Model.Email" />
                </div>
                <div id="form-password" class="input-group">
                    <label asp-for="@Model.Password"></label>
                    <span asp-validation-for="@Model.Password"></span>
                    <input asp-for="@Model.Password" />
                </div>
                <div id="form-confirm" class="input-group">
                    <label asp-for="@Model.ConfirmPassword"></label>
                    <span asp-validation-for="@Model.ConfirmPassword"></span>
                    <input asp-for="@Model.ConfirmPassword" data-val-equalto-other="SignUpViewModel.Password" />
                </div>
                <div id="form-terms" class="checkbox">
                    <div class="checkbox-group">
                        <div class="input-group">
                            <input asp-for="@Model.TermsAndConditions" />
                            <label asp-for="@Model.TermsAndConditions">I agree to the <a asp-controller="About" asp-action="Terms">Terms</a> & <a asp-controller="About" asp-action="Conditions">Conditions</a>.</label>
                        </div>
                        <span asp-validation-for="@Model.TermsAndConditions"></span>
                    </div>
                </div>
            </div>

            <button id="form-button" class="btn-theme-s" type="submit">Sign Up</button>
        </form>
    </div>
</section>

@await Html.PartialAsync("_ValidationScriptPartial")