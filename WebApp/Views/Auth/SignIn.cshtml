@model SignInViewModel

@{
    ViewData["Title"] = "Sign In";
}

<section id="signin">



    <div class="container">

        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
        {
            <div class="error-message">
                @ViewData["ErrorMessage"]
            </div>
        }


        <form method="post" asp-controller="Auth" asp-action="SignIn" novalidate>

            <h1>Welcome Back</h1>
            <p>Don't have an account yet? <a asp-controller="Auth" asp-action="SignUp">Sign up here</a>.</p>

            <div class="content">
                <div id="form-email" class="input-group">
                    <label asp-for="@Model.Email"></label>
                    <span asp-validation-for="@Model.Email"></span>
                    <input asp-for="@Model.Email" />
                </div>
                <div id="form-password" class="input-group">
                    <label asp-for="@Model.Password"></label>
                    <span asp-validation-for="@Model.Password"></span>
                    <input asp-for="@Model.Password" />
                </div>
                <div id="form-remember" class="checkbox">
                    <div class="checkbox-group">
                        <input asp-for="@Model.RememberMe" />
                        <label asp-for="@Model.RememberMe"></label>
                    </div>
                </div>

                <button id="form-button" class="btn-theme-s" type="submit">Sign In</button>

                <a id="form-forgot-password" asp-controller="Account" asp-action="Forgot">Forgot your password?</a>
            </div>

        </form>
    </div>
</section>